@model IEnumerable<RASS_System.Models.Driver>

@{
    ViewData["Title"] = "Drivers List";
}

<h1>Drivers List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Add New Driver details</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conatct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccidentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>Edit</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conatct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccidentID)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.MakeModel)
            </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pencil"></i>Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-eye"></i>Details</a> 
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>elete</a>
                </td>

        </tr>
}
    </tbody>
</table>
